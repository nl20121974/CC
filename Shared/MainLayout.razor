    <MudAppBar Bottom="true" Fixed="true" Color="Color.Transparent" Elevation="1">
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Outlined.Groups" Color="Color.Inherit" Edge="Edge.Start" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Outlined.Forum" Color="Color.Inherit" Edge="Edge.Start" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Outlined.Chat" Color="Color.Inherit" Edge="Edge.Start" />
        <MudSpacer />
    </MudAppBar>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}