@page "/pickuser"
@inherits PickUserModel

<h3>PickUser</h3>
@if (UserProfiles != null)
{
    @foreach (var userProfile in UserProfiles)
    {
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@userProfile.Name</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText>This day everything happend.</MudText>
                <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="@(() => PickUserProfile(userProfile))">Read More</MudButton>
            </MudCardActions>
        </MudCard>
    }
}
